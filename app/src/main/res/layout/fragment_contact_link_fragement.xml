<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A6000000"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:clickable="true"
    android:id="@+id/linklayout"
    android:focusable="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <android.support.v7.widget.CardView
            android:id="@+id/cardViewcontectlink"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/materiablueee"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs Vyas"
                    android:textColor="@color/desccolor"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/googlesans"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/username" />
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/linearcard"-->
                    <!--android:layout_marginBottom="4dp"-->
                    <!--android:layout_below="@id/username">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Director"
                        android:textColor="@color/desccolor"
                        android:layout_below="@id/username"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesans"
                        android:id="@+id/cardposition" />

                <!--</LinearLayout>-->

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardposition"
                    android:id="@+id/cardscroll">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="  Qualification    : "
                                android:textStyle="bold"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/qual"
                                android:text="B.TEch"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Area Of Interest : "
                                android:textStyle="bold"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/area"
                                android:text="B.TEch"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/explayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="  Experience       : "
                                android:textStyle="bold"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/exp"
                                android:text="B.TEch"
                                android:textColor="@color/desccolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage_contactlink"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal|top"
            app:civ_border_color="@color/materiablueee"
            app:civ_border_width="3dp"
            android:src="@drawable/facebook" />

    </FrameLayout>
</RelativeLayout>